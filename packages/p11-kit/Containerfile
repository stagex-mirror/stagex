FROM scratch AS base
ARG ARCH=x86_64
ENV VERSION=0.25.5
ENV SRC_HASH=04d0a86450cdb1be018f26af6699857171a188ac6d5b8c90786a60854e1198e5
ENV SRC_FILE=p11-kit-${VERSION}.tar.xz
ENV SRC_SITE=https://github.com/p11-glue/p11-kit/releases/download/${VERSION}/${SRC_FILE}

FROM base AS fetch
ADD --checksum=sha256:${SRC_HASH} ${SRC_SITE} .

FROM fetch AS build
COPY --from=stagex/busybox . /
COPY --from=stagex/binutils . /
COPY --from=stagex/python . /
COPY --from=stagex/musl . /
COPY --from=stagex/gcc . /
COPY --from=stagex/meson . /
COPY --from=stagex/ninja . /
COPY --from=stagex/libtasn1 . /
COPY --from=stagex/libffi . /
COPY --from=stagex/ca-certificates . /
COPY --from=stagex/zlib . /
RUN tar -xf ${SRC_FILE}
WORKDIR /p11-kit-${VERSION}
RUN --network=none <<-EOF
	set -ex
	meson setup \
		-Db_lto=true \
		-Dbackend_max_links=4 \
		-Dtest="$(want_check && echo true || echo false)" \
		-Dtrust_paths=/etc/ssl/certs/ca-certificates.crt \
		. output
	meson compile -C output
EOF

FROM build AS install
RUN --network=none <<-EOF
	DESTDIR=/rootfs meson install --no-rebuild -C output
	install -Dm644 /rootfs/etc/pkcs11/pkcs11.conf.example -t /rootfs/usr/share/doc/$pkgname
	find /rootfs -exec touch -hcd "@0" "{}" +
EOF

FROM stagex/filesystem AS package
COPY --from=install /rootfs/. /

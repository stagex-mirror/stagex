FROM scratch

# HACK: Included only for libgcc
# Can drop this once core is llvm-native
COPY --from=stagex/core-gcc /usr/lib/libgcc* /usr/lib/
COPY --from=stagex/core-gcc /usr/lib/libstdc* /usr/lib/
COPY --from=stagex/core-gcc /usr/lib/gcc/. /usr/lib/gcc/
COPY --from=stagex/core-gcc /usr/include/. /usr/include/

COPY --from=stagex/core-musl . /
COPY --from=stagex/core-musl-fts . /
COPY --from=stagex/core-musl-obstack . /
COPY --from=stagex/core-argp-standalone . /
COPY --from=stagex/core-llvm . /
COPY --from=stagex/core-libzstd . /
COPY --from=stagex/core-libffi . /
COPY --from=stagex/core-clang . /
COPY --from=stagex/core-linux-headers . /

ENV CC=clang
ENV CXX=clang++
ENV CPP="clang-cpp"
ENV AS="clang -c"
ENV AR=llvm-ar
ENV RANLIB=llvm-ranlib

ENTRYPOINT ["/usr/bin/clang"]

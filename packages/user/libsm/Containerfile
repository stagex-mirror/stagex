FROM stagex/pallet-gcc-gnu-busybox AS build
ARG VERSION
COPY --from=stagex/core-bash . /
COPY --from=stagex/core-util-macros . /
COPY --from=stagex/user-util-linux . /
COPY --from=stagex/core-xorgproto . /
COPY --from=stagex/user-xmlto . /
COPY --from=stagex/user-xtrans . /
COPY --from=stagex/user-libice . /
ADD fetch/libSM-${VERSION}.tar.xz .
WORKDIR /libSM-${VERSION}
ENV SOURCE_DATE_EPOCH=1
RUN --network=none <<-EOF
	set -eux
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--with-libuuid \
		--enable-docs \
		--with-xmlto \
		--without-fop
	make -j "$(nproc)"
	make install DESTDIR=/rootfs
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

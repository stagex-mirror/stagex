FROM stagex/pallet-clang-gnu-busybox AS build
COPY --from=stagex/user-libevent . /
ARG VERSION
ADD fetch/apr-${VERSION}.tar.bz2 .
WORKDIR /apr-${VERSION}
COPY *.patch .
RUN --network=none <<-EOF
	patch -p1 apr-1.6.2-dont-test-dlclose.patch
	patch -p1 semtimedop-s390x.patch
	./configure \
		--prefix=/usr \
		--datadir=/usr/share \
		--enable-nonportable-atomics=no \
		--with-devrandom=/dev/urandom
	make
	make DESTDIR=/rootfs install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

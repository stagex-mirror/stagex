FROM stagex/pallet-clang-gnu-busybox AS build
ARG VERSION
COPY --from=stagex/pallet-python . /
COPY --from=stagex/core-gettext . /
COPY --from=stagex/core-gawk . /
ADD fetch/grub-${VERSION}.tar.gz .
WORKDIR /grub-${VERSION}
RUN --network=none <<-EOF
	sh autogen.sh
	touch grub-core/extra_deps.lst
	mkdir build-pc
	cd build-pc
	ARCH="$(uname -m)"
	CLFLAGS="-fno-plt"
	../configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--build="${ARCH}" \
		--target="${ARCH}" \
		--host="${ARCH}" \
		--disable-nls \
		--disable-werror \
		--with-platform=pc
	make
	make DESTDIR=/rootfs install-strip
	cd ..
	mkdir build-efi
	cd build-efi
	../configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--build=${ARCH} \
		--target=${ARCH} \
		--host=${ARCH} \
		--disable-nls \
		--disable-werror \
		--with-platform=efi \
		--disable-efiemu
	make
	make DESTDIR=/rootfs install-strip
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM scratch AS build
ARG VERSION
COPY --from=stagex/core-busybox . /
COPY --from=stagex/core-bison . /
COPY --from=stagex/core-flex . /
COPY --from=stagex/core-gcc . /
COPY --from=stagex/core-binutils . /
COPY --from=stagex/core-make . /
COPY --from=stagex/core-gawk . /
COPY --from=stagex/core-musl . /
COPY --from=stagex/core-python . /
COPY --from=stagex/core-m4 . /
COPY --from=stagex/core-perl . /
COPY --from=stagex/core-pkgconf . /
COPY --from=stagex/core-automake . /
COPY --from=stagex/core-autoconf . /
COPY --from=stagex/core-gettext . /
COPY --from=stagex/core-xz . /
COPY --from=stagex/core-linux-headers . /
COPY --from=fetch . .
RUN tar -xf grub-${VERSION}.tar.gz
WORKDIR /grub-${VERSION}
RUN --network=none <<-EOF
	set -eux
	sh autogen.sh
	touch grub-core/extra_deps.lst
	mkdir build-pc
	cd build-pc
	ARCH="$(uname -m)"
	CLFLAGS="-fno-plt"
	../configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--build="${ARCH}" \
		--target="${ARCH}" \
		--host="${ARCH}" \
		--disable-nls \
		--disable-werror \
		--with-platform=pc
	make
	make DESTDIR=/rootfs install-strip
	cd ..
	mkdir build-efi
	cd build-efi
	../configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--build=${ARCH} \
		--target=${ARCH} \
		--host=${ARCH} \
		--disable-nls \
		--disable-werror \
		--with-platform=efi \
		--disable-efiemu
	make
	make DESTDIR=/rootfs install-strip
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

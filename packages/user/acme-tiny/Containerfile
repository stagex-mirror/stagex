FROM stagex/pallet-python AS build
ARG VERSION
COPY --from=stagex/core-py-build . /
COPY --from=stagex/core-py-pep517 . /
COPY --from=stagex/core-py-toml . /
COPY --from=stagex/core-openssl . /
ADD fetch/acme-tiny-${VERSION}.tar.gz .
WORKDIR /acme-tiny-${VERSION}
RUN --network=none <<-EOF
  set -eu
	install -Dm 755 acme_tiny.py /rootfs/usr/bin/acme-tiny
	install -Dm644 LICENSE /rootfs/usr/share/licenses/acme-tiny/LICENSE
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs /

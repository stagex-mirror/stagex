FROM scratch AS base
ENV VERSION=0.25.1
ENV SRC_HASH=989e6305900d4f2f56ef84aa0da07c044459b4f8a508957a4cdefce6a1367c7b
ENV SRC_FILE=${VERSION}.tar.gz
ENV SRC_SITE=https://github.com/opensc/opensc/archive/${SRC_FILE}

FROM base AS fetch
ADD --checksum=sha256:${SRC_HASH} ${SRC_SITE} .

FROM fetch AS build
COPY --from=stagex/core-busybox . /
COPY --from=stagex/core-gcc . /
COPY --from=stagex/core-binutils . /
COPY --from=stagex/core-make . /
COPY --from=stagex/core-musl . /
COPY --from=stagex/core-linux-headers . /
COPY --from=stagex/core-perl . /
COPY --from=stagex/core-openssl . /
COPY --from=stagex/core-ncurses . /
COPY --from=stagex/core-readline . /
COPY --from=stagex/core-autoconf . /
COPY --from=stagex/core-gettext . /
COPY --from=stagex/core-automake . /
COPY --from=stagex/core-libtool . /
COPY --from=stagex/core-pkgconf . /
COPY --from=stagex/core-m4 . /
COPY --from=stagex/core-zlib . /
COPY --from=stagex/user-util-linux . /
COPY --from=stagex/user-pcsc-lite . /
RUN tar -xf ${SRC_FILE}
WORKDIR /OpenSC-${VERSION}
ENV CFLAGS="-U_FORTIFY_SOURCE -Wno-error"
RUN --network=none <<-EOF
    set -eux
    ./bootstrap
    ./configure \
        --prefix=/usr \
        --sysconfdir=/etc \
        --mandir=/usr/share/man \
        --infodir=/usr/share/info \
        --localstatedir=/var \
        --enable-zlib \
        --enable-readline \
        --enable-openssl \
        --enable-pcsc \
        --enable-sm \
        --enable-piv-sm
    make -j "$(nproc)"
    make -C src/tools
EOF

FROM build AS install
RUN --network=none <<-EOF
    set -eux
    make DESTDIR=/rootfs install
    install -D -m644 etc/opensc.conf /rootfs/etc/opensc.conf
EOF

FROM stagex/core-filesystem AS package
COPY --from=install /rootfs/. /

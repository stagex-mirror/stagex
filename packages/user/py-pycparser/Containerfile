FROM stagex/pallet-python AS build
ARG VERSION
ADD fetch/py-pycparser-${VERSION}.tar.gz .
WORKDIR /pycparser-release_v${VERSION}
RUN --network=none <<-EOF
	set -eu
	python setup.py build
	cd pycparser
	python _build_tables.py
	cd ..
	python setup.py install --root=/rootfs --optimize=1
	install -Dm0644 -t /rootfs/usr/share/licenses/py-pycparser/ LICENSE
	find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM stagex/pallet-python AS build
COPY --from=stagex/user-py-sphinx . /
ARG VERSION
ADD fetch/py-sphinx-issues-${VERSION}.tar.gz .
ENV SETUPTOOLS_SCM_PRETEND_VERSION=${VERSION}
WORKDIR /sphinx-issues-${VERSION}
RUN --network=none <<-EOF
	set -eu
	python -m build --wheel --skip-dependency-check --no-isolation
	python -m installer --destdir=/rootfs dist/*.whl
	install -Dm0644 -t /rootfs/usr/share/licenses/py-sphinx-issues/ LICENSE
	find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

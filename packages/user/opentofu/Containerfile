FROM stagex/pallet-go AS build
ARG VERSION
ADD fetch/opentofu-${VERSION}.tar.gz .
WORKDIR /opentofu-${VERSION}
RUN go mod download
RUN --network=none <<-EOF
	set -eu
	go \
		build \
		-trimpath \
		-o tofu \
		-v \
		-ldflags="-X github.com/opentofu/opentofu/version.dev=no" \
		./cmd/tofu
	mkdir -p /rootfs/usr/bin/
	install -vDm755 -t /rootfs/usr/bin tofu
	install -vDm644 -t /rootfs/usr/share/licenses/opentofu LICENSE
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs /

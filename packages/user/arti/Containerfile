FROM stagex/pallet-rust AS build
COPY --from=stagex/core-openssl . /
COPY --from=stagex/core-perl . /
COPY --from=stagex/core-make . /
ARG VERSION
ADD fetch/arti-arti-v${VERSION}.tar.gz .
WORKDIR /arti-arti-v${VERSION}
RUN cargo fetch
ENV RUST_BACKTRACE=1
ENV SOURCE_DATE_EPOCH=1
RUN --network=none <<-EOF
       ARCH="$(uname -m)"
       cargo build \
               --frozen \
               --release \
               --target "${ARCH}-unknown-linux-musl" \
               --features static
       mkdir -p /rootfs/usr/bin
       cp target/${ARCH}-unknown-linux-musl/release/arti /rootfs/usr/bin/arti
       install -Dm644 -t /rootfs/usr/share/licenses/arti/ GPL-3
       install -Dm644 -t /rootfs/usr/share/licenses/arti/ LGPL-3
       install -Dm644 -t /rootfs/usr/share/licenses/arti/ LICENSE-APACHE
       install -Dm644 -t /rootfs/usr/share/licenses/arti/ LICENSE-MIT
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM scratch AS build
ARG VERSION
COPY --from=stagex/pallet-python . /
COPY --from=stagex/core-py-build . /
COPY --from=stagex/core-py-installer . /
COPY --from=stagex/core-py-pep517 . /
COPY --from=stagex/core-py-setuptools . /
COPY --from=stagex/core-py-toml . /
COPY --from=stagex/core-py-wheel . /
ADD fetch/py-defusedxml-${VERSION}.tar.gz .
WORKDIR /defusedxml-${VERSION}/
RUN --network=none <<-EOF
  set -eu
  python -m build --wheel --skip-dependency-check --no-isolation
  python -m installer -d /rootfs dist/*.whl
  install -D -m0644 LICENSE /rootfs/usr/share/license/py-defusedxml/LICENSE
  find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package 
COPY --from=build /rootfs /

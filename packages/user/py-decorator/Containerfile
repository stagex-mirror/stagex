FROM stagex/pallet-python AS build
ARG VERSION
ADD fetch/py-decorator-${VERSION}.tar.gz .
WORKDIR /decorator-${VERSION}
RUN --network=none <<-EOF
	set -eu
	python -m build --wheel --no-isolation
	python -m installer --destdir=/rootfs dist/*.whl
	install -Dm0644 LICENSE.txt /rootfs/usr/share/licenses/py-decorator/LICENSE
	find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

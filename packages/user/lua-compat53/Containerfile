FROM stagex/pallet-clang-gnu-busybox AS build
ARG VERSION
COPY --from=stagex/core-lua5.1 . /

ADD fetch/lua-compat-${VERSION}.tar.gz .
WORKDIR /lua-${VERSION}
RUN --network=none <<-EOF
	set -eu
	make \
		-j "$(nproc)" \
		V="${VERSION}" \
		LDFLAGS="-lncurses" \
		CFLAGS="-fPIC -DLUA_USE_LINUX -DLUA_COMPAT_5_2 -DLUA_USE_LINENOISE" \
		RPATH="/usr/lib" \
		CC=clang \
		LIB_LIBS="-lpthread -lm -ldl -llinenoise" \
		linux
	make \
		V="${VERSION}" \
		INSTALL_TOP="/rootfs/usr" \
		INSTALL_INC="/rootfs/usr/include/lua" \
		INSTALL_LIB="/rootfs/usr/lib/lua" \
		install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

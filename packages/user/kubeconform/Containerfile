FROM stagex/pallet-go AS build
ARG VERSION
ADD fetch/kubeconform-${VERSION}.tar.gz .
WORKDIR /kubeconform-${VERSION}
ENV GOPATH=/cache/go
ENV GOCACHE=/cache/
ENV GOWORK=off
ENV GOPROXY=https://proxy.golang.org,direct
ENV GOSUMDB=sum.golang.org
ENV CGO_ENABLED=0
ENV GOHOSTOS=linux
ENV GOHOSTARCH=amd64
ENV GO11MODULE=off
RUN go get ./...
RUN <<-EOF
	set -eu
	go build -o bin/ -trimpath -v ./...
	mkdir -p /rootfs/usr/bin/
	cp bin/kubeconform /rootfs/usr/bin/
	install -D -m0644 -t /rootfs/usr/share/licenses/kubeconform/ LICENSE
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

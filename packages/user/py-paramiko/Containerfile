FROM stagex/pallet-python AS build
ARG VERSION
COPY --from=stagex/user-py-cryptography . /
COPY --from=stagex/user-py-bcrypt . /
COPY --from=stagex/user-py-pynacl . /
ADD fetch/paramiko-${VERSION}.tar.gz .
WORKDIR /paramiko-${VERSION}
RUN --network=none <<-EOF
	set -eu
	python setup.py install --root=/rootfs --optimize=1
	install -Dm0644 -t /rootfs/usr/share/licenses/py-paramiko/ LICENSE
	find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

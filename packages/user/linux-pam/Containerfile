FROM stagex/pallet-clang-gnu-busybox AS build
COPY --from=stagex/core-gettext . /
COPY --from=stagex/user-utmps . /
ARG VERSION
ADD fetch/linux-pam-${VERSION}.tar.xz .
WORKDIR /Linux-PAM-${VERSION}
RUN --network=none <<-EOF
	export CFLAGS="$(pkg-config --cflags utmps)"
	export LDFLAGS=$(pkg-config --libs utmps)
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-nls \
		--disable-db \
		--disable-examples \
		--sbindir=/usr/sbin \
		--enable-securedir=/usr/lib/security
	make
	make DESTDIR=/rootfs install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM stagex/pallet-clang-gnu-busybox AS build
ARG VERSION
ADD fetch/alsa-lib-${VERSION}.tar.bz2 .
WORKDIR /alsa-lib-${VERSION}
RUN --network=none <<-EOF
	set -eux; \
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--disable-python \
		--disable-static \
		--disable-resmgr \
		--enable-rawmidi \
		--enable-seq \
		--enable-aload \
		--disable-dependency-tracking \
		--without-versioned
	make -j "$(nproc)"
	make DESTDIR=/rootfs install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

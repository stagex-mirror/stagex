FROM stagex/pallet-python AS build
ARG VERSION
ADD fetch/py-pyasn1-${VERSION}.tar.gz .
WORKDIR /pyasn1-${VERSION}/
RUN --network=none <<-EOF
  set -eu
  python setup.py install -O1 --root=/rootfs
  install -vDm 644 LICENSE.rst -t /rootfs/usr/share/license/py-pyasn1/LICENSE.rst
  find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs /

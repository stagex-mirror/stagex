FROM stagex/pallet-rust AS build
COPY --from=stagex/core-perl . /
COPY --from=stagex/core-make . /
ARG VERSION
ADD fetch/v${VERSION}.tar.gz .
WORKDIR /snphost-${VERSION}
RUN cargo fetch
ENV RUST_BACKTRACE=1
ENV SOURCE_DATE_EPOCH=1
RUN --network=none <<-EOF
       ARCH="$(uname -m)"
       cargo build \
               --frozen \
               --release \
               --target "${ARCH}-unknown-linux-musl" \
               --bin snphost
       mkdir -p /rootfs/usr/bin
       cp target/${ARCH}-unknown-linux-musl/release/snphost /rootfs/usr/bin/snphost
       install -Dm644 -t /rootfs/usr/share/licenses/snphost/ LICENSE
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

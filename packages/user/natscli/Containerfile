FROM stagex/pallet-go AS build
ARG VERSION
ADD fetch/natscli-${VERSION}.tar.gz .
WORKDIR /natscli-${VERSION}
RUN go mod download
ENV CGO_ENABLED=0
RUN --network=none <<-EOF
	set -eu
	go build -o natscli -trimpath -v github.com/nats-io/natscli/nats
	install -Dm755 natscli /rootfs/usr/bin/nats
	install -Dm644 -t /rootfs/usr/share/licenses/nats LICENSE
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

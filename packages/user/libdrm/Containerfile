FROM stagex/pallet-clang-meson-busybox AS build
ARG VERSION
COPY --from=stagex/user-libpciaccess . /
COPY --from=stagex/user-eudev . /
COPY --from=stagex/user-xmlto . /
COPY --from=stagex/core-linux-headers . /
COPY --from=stagex/core-bash . /
COPY --from=stagex/core-libtool . /
ADD fetch/drm-libdrm-${VERSION}.tar.xz .
WORKDIR /libdrm-${VERSION}
RUN --network=none <<-EOF
	meson setup \
		--prefix=/usr \
		-Dintel=enabled \
		-Dradeon=enabled \
		-Damdgpu=enabled \
		-Dnouveau=enabled \
		-Dvmwgfx=enabled \
		-Domap=enabled \
		-Dexynos=enabled \
		-Dfreedreno=enabled \
		-Dtegra=enabled \
		-Dvc4=enabled \
		-Detnaviv=enabled \
		-Dudev=true \
		-Dinstall-test-programs=true \
		-Dtests=true \
		. output

	ninja -C output
	DESTDIR=/rootfs meson install --no-rebuild -C output
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM scratch AS build
ARG VERSION
ARG CANOKEY_CRYPTO_VERSION
ARG MBEDTLS_VERSION
ARG LITTLEFS_VERSION
ARG TINYCBOR_VERSION

COPY --from=stagex/core-git . /
COPY --from=stagex/core-zlib . /
COPY --from=stagex/core-curl . /
COPY --from=stagex/ca-certificates . /
COPY --from=stagex/openssl . /
COPY --from=stagex/cmake . /
COPY --from=stagex/glibc . /
COPY --from=stagex/gcc . /
COPY --from=stagex/busybox . /
COPY --from=stagex/make . / 
COPY --from=stagex/gawk . /
COPY --from=stagex/autoconf . /
COPY --from=stagex/automake . /
COPY --from=stagex/busybox . /
COPY --from=stagex/bash . /
COPY --from=stagex/binutils . /

ADD fetch/qemu-canokey${VERSION}.tar.xz .
ADD fetch/canokey-core${CANOKEY_CORE_VERSION}.tar.xz qemu-canokey/
ADD fetch/qemu-crypto${CANOKEY_CRYPTO_VERSION}.tar.xz qemu-canokey/canokey-core/
ADD fetch/mbedtls${MBEDTLS_VERSION}.tar.xz qemu-canokey/canokey-core/qemu-crypto/
ADD fetch/littlefs${LITTLEFS_VERSION}.tar.xz qemu-canokey/canokey-core/
ADD fetch/tinycbor${TINYCBOR_VERSION}.tar.xz qemu-canokey/canokey-core/
RUN ls -R qemu-canokey

RUN --network=none <<-EOF
	set -eux
    mkdir canokey-qemu/build
    cd canokey-qemu/build
    cmake -DCMAKE_INSTALL_PREFIX=/usr .. 
	make -j "$(nproc)"
	make DESTDIR=/rootfs install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /
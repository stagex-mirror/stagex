FROM stagex/pallet-clang-cmake-busybox AS build
ARG VERSION
COPY --from=stagex/core-make . /
COPY --from=stagex/core-coreutils . /
COPY --from=stagex/core-curl . /
COPY --from=stagex/core-gettext . /
COPY --from=stagex/core-git . /
COPY --from=stagex/core-openssl . /
COPY --from=stagex/pallet-lua . /
ADD fetch/v${VERSION}.tar.gz .
WORKDIR /neovim-${VERSION}
ENV CFLAGS="-march=x86-64 -mtune=generic -fno-lto"
ENV CXXFLAGS="-fno-lto"
ENV SOURCE_DATE_EPOCH="1"

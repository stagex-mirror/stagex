FROM stagex/pallet-python AS build
ARG VERSION
COPY --from=stagex/core-py-dateutil . /
COPY --from=stagex/user-py-pytz . /
COPY --from=stagex/user-py-six . /
ADD fetch/py-vobject-${VERSION}.tar.gz .
WORKDIR /vobject-${VERSION}/
RUN --network=none <<-EOF
  set -eu
  python setup.py install -O1 --root=/rootfs
  install -vDm 644 ACKNOWLEDGEMENTS.txt -t /rootfs/usr/share/py-vobject/ACKNOWLEDGEMENTS.txt
  install -vDm 644 README.md -t /rootfs/usr/share/py-vobject/README.md
  find /rootfs | grep -E "(/__pycache__$|\.pyc$|\.pyo$)" | xargs rm -rf
EOF

FROM stagex/core-filesystem AS package
COPY --from=build /rootfs /

FROM scratch AS build
ARG VERSION
COPY --from=stagex/core-busybox . /
COPY --from=stagex/core-make . /
COPY --from=stagex/core-musl . /
COPY --from=stagex/core-llvm . /
COPY --from=stagex/core-zlib . /
COPY --from=stagex/core-libffi . /
COPY --from=stagex/core-libzstd . /
COPY --from=stagex/core-lld . /
COPY --from=stagex/core-clang . /
COPY --from=stagex/core-gcc /usr/lib/libgcc* /usr/lib/
COPY --from=stagex/core-gcc /usr/lib/libstdc* /usr/lib/
COPY --from=stagex/core-gcc /usr/lib/gcc/. /usr/lib/gcc/

ADD fetch/perl-${VERSION}.tar.xz .
WORKDIR /perl-${VERSION}
ENV SOURCE_DATE_EPOCH=1
RUN --network=none <<-EOF
	set -eux
	printf '
	osvers="gnulinux"
	myuname="dummy_uname"
	myhostname="builder"
	cf_by="builder"
	cf_time="0"
	' > config.over
	./Configure \
		-des \
		-Dcccdlflags='-fPIC' \
		-Dccdlflags='-rdynamic' \
		-Dprefix=/usr \
		-Dvendorprefix=/usr \
		-Dvendorlib=/usr/share/perl5/vendor_perl \
		-Dvendorarch=/usr/lib/perl5/vendor_perl \
		-Dsiteprefix=/usr/local \
		-Dsitelib=/usr/local/share/perl5/site_perl \
		-Dsitearch=/usr/local/lib/perl5/site_perl \
		-Dlocincpth=' ' \
		-Duselargefiles \
		-Dusethreads \
		-Duseshrplib \
		-Dcc="clang -fuse-ld=lld" \
		-Dcpp="clang-cpp -fuse-ld=lld" \
		-Dar=llvm-ar \
		-Dnm=llvm-nm \
		-Dranlib=llvm-ranlib \
		-Dd_semctl_semun \
		-Dman1dir=/usr/share/man/man1 \
		-Dman3dir=/usr/share/man/man3 \
		-Dinstallman1dir=/usr/share/man/man1 \
		-Dinstallman3dir=/usr/share/man/man3 \
		-Dman1ext='1' \
		-Dman3ext='3pm' \
		-Ud_csh \
		-Ud_fpos64_t \
		-Ud_off64_t \
		-Dusenm
	make -j "$(nproc)"
	make DESTDIR=/rootfs install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM stagex/pallet-clang-gnu-busybox AS build
ARG VERSION
ADD fetch/libpng-${VERSION}.tar.gz .
WORKDIR /libpng-${VERSION}
RUN --network=none <<-EOF
        set -ex
        ./configure \
                --prefix=/usr \
                --sysconfdir=/etc \
                --mandir=/usr/share/man \
                --localstatedir=/var
        make
        make DESTDIR="/rootfs" install
        install -vDm644 -t /rootfs/usr/share/licenses/libpng LICENSE
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /
FROM scratch AS build
ARG VERSION
COPY --from=stagex/core-busybox . /
COPY --from=stagex/core-binutils . /
COPY --from=stagex/core-pkgconf . /
COPY --from=stagex/core-ncurses . /
COPY --from=stagex/core-musl . /
COPY --from=stagex/core-make . /
COPY --from=stagex/core-gcc . /
COPY --from=fetch . .
RUN --network=none tar -xf readline-${VERSION}.tar.gz
WORKDIR /readline-${VERSION}
ADD *.patch .
ENV PATCH_LEVEL=10
RUN --network=none <<-EOF
	set -eu
	p=1; while [ ${p} -le ${PATCH_LEVEL} ]; do
		printf "Applying patch readline82-$(printf "%03d" $p)\n"
		patch -p0 -i ../readline82-$(printf "%03d" $p)
		p=$(( p + 1 ))
	done
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-static \
		--enable-shared
	make -j "$(nproc)"
	make DESTDIR=/rootfs install
EOF
FROM stagex/core-filesystem AS package
COPY --from=build /rootfs/ /

FROM scratch AS base
ARG ARCH=x86_64
ENV VERSION=1.5.0
ENV SRC_HASH=7b404c63361ed35b3667aec75cc37b54298d56dd2bcf369de3373212cc06fd98
ENV SRC_FILE=protobuf-c-${VERSION}.tar.gz
ENV SRC_SITE=https://github.com/protobuf-c/protobuf-c/releases/download/v${VERSION}/${SRC_FILE}

FROM base AS fetch
ADD --checksum=sha256:${SRC_HASH} ${SRC_SITE} .

FROM fetch AS build
COPY --from=stagex/busybox . /
COPY --from=stagex/binutils . /
COPY --from=stagex/musl . /
COPY --from=stagex/gcc . /
COPY --from=stagex/make . /
COPY --from=stagex/linux-headers . /
COPY --from=stagex/pkgconf . /
COPY --from=stagex/libtool . /
COPY --from=stagex/perl . /
COPY --from=stagex/autoconf . /
COPY --from=stagex/automake . /
COPY --from=stagex/libunwind . /
COPY --from=stagex/zlib . /
COPY --from=stagex/libtool . /
COPY --from=stagex/abseil-cpp . /
COPY --from=stagex/protobuf . /
RUN tar -xf ${SRC_FILE}
WORKDIR /protobuf-c-${VERSION}
RUN --network=none <<-EOF
	set -ex
    CFLAGS="-flto=auto"
	CXXFLAGS="-std=c++17 -flto=auto"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
EOF

FROM build AS install
RUN --network=none make DESTDIR="/rootfs" install

FROM stagex/filesystem AS package
COPY --from=install /rootfs/. /
